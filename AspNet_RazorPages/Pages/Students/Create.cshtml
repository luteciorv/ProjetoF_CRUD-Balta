@page
@model AspNet_RazorPages.Pages.Students.CreateModel

@{
    ViewData["Title"] = "Cadastrar Aluno";
}

<h1>Cadastrar novo aluno</h1>

<h4>Aluno</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="ViewModel.Name" class="control-label"></label>
                <input asp-for="ViewModel.Name" class="form-control" />
                <span asp-validation-for="ViewModel.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ViewModel.Email" class="control-label"></label>
                <input asp-for="ViewModel.Email" class="form-control" />
                <span asp-validation-for="ViewModel.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Retornar aos alunos</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
