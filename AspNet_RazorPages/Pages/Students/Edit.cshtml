@page
@model AspNet_RazorPages.Pages.Students.EditModel

@{
    ViewData["Title"] = "Alterar dados do aluno";
}

<h1>Alteração de dados</h1>

<h4>Aluno</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EditViewModel.Id" class="form-control" />

            <div class="form-group">
                <label asp-for="EditViewModel.Name" class="control-label"></label>
                <input asp-for="EditViewModel.Name" class="form-control" />
                <span asp-validation-for="EditViewModel.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EditViewModel.Email" class="control-label"></label>
                <input asp-for="EditViewModel.Email" class="form-control" />
                <span asp-validation-for="EditViewModel.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Alterar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Retornar aos alunos</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
